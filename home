<script>

const portfilioItems = document.querySelectorAll('.portfilio-item-wrapper')
portfilioItems.forEach(portfilioItem => {
             portfilioItem.addEventListener('mouseover', () =>{
                 console.log(portfilioItem.childNodes[1].classList);
                 portfilioItem.childNodes[1].classList.add('img-darken');


             })
             portfilioItem.addEventListener('mouseout', () =>{
                 console.log(portfilioItem.childNodes[1].classList);
                 portfilioItem.childNodes[1].classList.remove('img-darken');
             })

}
)
</script>


